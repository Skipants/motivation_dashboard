!!! Strict
%html{:lang =>"en"}
  %head
    %title Motivational Dashboard
    = stylesheet_link_tag 'default', 'dashboard'
    - if Rails.env.production?
      = javascript_include_tag 'application', 'jquery.min', 'jquery.masonry.min', 'rails.js'
    - else
      = javascript_include_tag 'application', 'jquery', 'jquery.masonry', 'rails.js'
  %body
    #wrapper
      #header
        %span.right
          = "#{current_user.user_bar_name} (#{link_to('My Account', user_path(current_user))} | #{link_to('Logout', logout_path)})".html_safe

        %h1
          = link_to current_user.dashboard.name, dashboard_path
      #main
        = yield
      #footer
        MotivationDashboard.com