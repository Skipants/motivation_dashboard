%h2
  = "Ministry of Subscribers (Total: #{@subscribers.total_entries})"

%table.general_table{:cellpadding => 0, :cellspacing => 0}
  %thead
    %tr
      %th Email
      %th Actions
  - @subscribers.each do |subscriber|
    %tbody
      %tr
        %td= subscriber.email
        %td
          = link_to 'Delete', [:big_brother, subscriber], :method => 'Delete', :confirm => "Are you sure you want to permanently remove #{subscriber.email}?"

= will_paginate(@subscribers)